<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.TeamDetailFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/team_detail"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/team_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@mipmap/pp1_round" />

        <TextView
            android:id="@+id/team_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App Dev"
            android:textAlignment="center"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/team_focus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cloud Computing"
            android:textAlignment="center"
            android:textColor="@color/textLight"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/team_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="A highly misunderstood martyr does his best to fight the most of the enemy combatants all the while carrying a pistol in the trunk"
            android:textAlignment="viewStart"
            android:textColor="@color/textLight" />

        <TextView
            android:id="@+id/team_member_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="team"
            android:textAlignment="textEnd"
            android:textColor="@color/textLight" />
    </LinearLayout>
</FrameLayout>
